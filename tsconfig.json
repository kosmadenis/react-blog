{
  "compilerOptions": {
    "paths": {
      "@/*": ["./src/*"]
    },

    "removeComments": true,
    "noEmitHelpers": true,
    "target": "ESNext",

    "module": "ESNext",
    "moduleResolution": "Bundler",
    "verbatimModuleSyntax": true,

    "jsx": "preserve",

    "allowJs": false,

    "strict": true,
    "noImplicitAny": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  }
}
